<%- include ../Partials/header.ejs %>
<%- include ../Partials/main_nav.ejs %>

<div class="jumbotron jumbotron-fluid">
  <h1 class="display-4"><b><%= title %></b></h1>
</div>
<style>
body {
  background-image: url('/images/food.jpg');
  background-repeat: no-repeat;
  background-attachment: fixed;  
  background-size: cover;
}
label {
    background-color: black;
    color: white;
    border-radius: 25%;
}
</style>
<div class ="container">
    <div class="row">
    <div class="col-md-offset-3 col-md-6">
    <!---Form for the 'Add' page--->
        <form class="form" method="post">
        <div class="form-group">
            <label for="breakfTextField">Breakfast</label>
            <input type="text" class="form-control"
            id="breakfTextField"
            placeholder="Enter your breakfast"
            name="breakf" required>
        </div>

        <div class="form-group">
            <label for="c1TextField">Calories</label>
            <input type="text" class="form-control"
            id="c1TextField"
            placeholder="Calories for Breakfast"
            name="c1" required>
        </div>

        <div class="form-group">
            <label for="lunchTextField">Lunch</label>
            <input type="text" class="form-control"
            id="lunchTextField"
            placeholder="Enter your lunch"
            name="lunch" required>
        </div>

         <div class="form-group">
            <label for="c2TextField">Calories</label>
            <input type="text" class="form-control"
            id="c2TextField"
            placeholder="Calories for Lunch"
            name="c2" required>
        </div>

        <div class="form-group">
            <label for="dinnerTextField">Dinner</label>
            <input type="text" class="form-control"
            id="dinnerTextField"
            placeholder="Enter your dinner"
            name="dinner" required>
        </div>

         <div class="form-group">
            <label for="c3TextField">Calories</label>
            <input type="text" class="form-control"
            id="c3TextField"
            placeholder="Calories for Breakfast"
            name="c3" required>
        </div>

        <button class="btn-btn-primary" type="submit">
            <i class="fa-solid fa-check-to-slot"></i>Submit 
        </button>

        <a href="/meal" class="btn btn-warning">
            <i class="fas fa-undo"></i>Cancel</a>
        </form>
    </div>
    </div>
</div>

<%- include ../Partials/footer.ejs %>
