<%- include ../Partials/header.ejs %>
<%- include ../Partials/main_nav.ejs %>


<div class="jumbotron jumbotron-fluid">
  <h1 class="display-4"><b>Welcome to the <%= title %></b></h1>
</div>
<style>
body {
  background-image: url('/images/food.jpg');
  background-repeat: no-repeat;
  background-attachment: fixed;  
  background-size: cover;
}
</style>
    <div class = "container">
        <div class = "row">
        <div class = "col-mid-offset-3 col-md-9">
        <% if(typeof displayName=='string' && displayName) { %>
            <a href = "/meal/add" class="btn btn-primary" role="button">
            <i class="fas fa-plus-circle"></i> Add your Meals!</a>
        <br>
        <% } %>
        <br>
            <!---Table displaying the meal list--->
        <table class = "table table-bordered table-striped table-hover" style="background-color:#D3D3D3">
        <tr class="d-flex">
        <% if(typeof displayName=='string' && displayName) { %>
            <th class = "text-center col-3">Breakfast</th>
            <th class = "text-center col-1">Calories</th>
            <th class = "text-center col-3">Lunch</th>
            <th class = "text-center col-1">Calories</th>
            <th class = "text-center col-3">Dinner</th>
            <th class = "text-center col-1">Calories</th>
            <th class = "text-center col-1"></th>
            <th class = "text-center col-1"></th>
        <% } else { %>
            <th class = "text-center col-3">Breakfast</th>
            <th class = "text-center col-1">Calories</th>
            <th class = "text-center col-3">Lunch</th>
            <th class = "text-center col-1">Calories</th>
            <th class = "text-center col-3">Dinner</th>
            <th class = "text-center col-1">Calories</th>
        <% } %>
        </tr>
        
        <% for(let count=0; count<Meallist.length; count++) { %>
            <tr class ="d-flex">
            <% if(typeof displayName=='string' && displayName) { %>
                <td class = "text-center col-3"><%= Meallist[count].breakf %></td>
                <td class = "text-center col-1"><%= Meallist[count].c1 %></td>
                <td class = "text-center col-3"><%= Meallist[count].lunch %></td>
                <td class = "text-center col-1"><%= Meallist[count].c2 %></td>
                <td class = "text-center col-3"><%= Meallist[count].dinner %></td>
                <td class = "text-center col-1"><%= Meallist[count].c3 %></td>

            <td class = "text-center col-1">
                <a href="/meal/edit/<%= Meallist[count]._id %>"
                class="btn btn-primary">
                <i class="fas fa-pencil-alt"></i> Edit </a>
            </td>
            <td class = "text-center col-1">
                <a href="/meal/delete/<%= Meallist[count]._id %>"
                class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Delete </a>
            </td>
        
        <% } else { %>
            <td class = "text-center col-3"><%= Meallist[count].breakf %></td>
            <td class = "text-center col-1"><%= Meallist[count].c1 %></td>
            <td class = "text-center col-3"><%= Meallist[count].lunch %></td>
            <td class = "text-center col-1"><%= Meallist[count].c2 %></td>
            <td class = "text-center col-3"><%= Meallist[count].dinner %></td>
            <td class = "text-center col-1"><%= Meallist[count].c3 %></td>
        <% } %> 
        </tr>
    <% } %> 
        </table>
        </div>
        </div>
    </div>

<%- include ../Partials/footer.ejs %>
<%- include ../Partials/bottom_nav.ejs %>







